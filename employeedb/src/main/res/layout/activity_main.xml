<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/personId"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="83dp"
        android:hint="ID:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/personName"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:hint="Имя:"
        app:layout_constraintEnd_toEndOf="@+id/personAge"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/personAge"
        app:layout_constraintTop_toBottomOf="@+id/personAge" />

    <EditText
        android:id="@+id/personAge"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:hint="Возраст:"
        app:layout_constraintEnd_toEndOf="@+id/personSuperpower"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/personSuperpower"
        app:layout_constraintTop_toBottomOf="@+id/personSuperpower" />

    <EditText
        android:id="@+id/personSuperpower"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:hint="Суперспособность:"
        app:layout_constraintEnd_toEndOf="@+id/personId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/personId"
        app:layout_constraintTop_toBottomOf="@+id/personId" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Сохранить"
        app:layout_constraintEnd_toEndOf="@+id/personName"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/personName"
        app:layout_constraintTop_toBottomOf="@+id/personName" />

    <Button
        android:id="@+id/getInfoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Данные супергероя"
        app:layout_constraintEnd_toEndOf="@+id/saveBtn"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="@+id/saveBtn"
        app:layout_constraintTop_toBottomOf="@+id/saveBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>