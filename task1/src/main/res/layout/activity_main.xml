<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/personGroupNumber"
        android:layout_width="296dp"
        android:layout_height="48dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="58dp"
        android:hint="Номер группы"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/personFavoriteMovie"
        android:layout_width="296dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:hint="Любимый фильм"
        app:layout_constraintEnd_toEndOf="@+id/personListNumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/personListNumber"
        app:layout_constraintTop_toBottomOf="@+id/personListNumber" />

    <EditText
        android:id="@+id/personListNumber"
        android:layout_width="296dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:hint="Номер по списку"
        app:layout_constraintEnd_toEndOf="@+id/personGroupNumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/personGroupNumber"
        app:layout_constraintTop_toBottomOf="@+id/personGroupNumber" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="251dp"
        android:text="Сохранить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>